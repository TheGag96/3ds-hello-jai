    LINEAR_INTERP :: 64;
    REPEAT        :: 1024;
    ONE_SHOT      :: 2048;
    FORMAT_8BIT   :: 0;
    FORMAT_16BIT  :: 4096;
    FORMAT_ADPCM  :: 8192;
    FORMAT_PSG    :: 12288;
    ENABLE        :: 16384;
}

/// Capture modes.
CAPTURE :: enum u16 {
    REPEAT       :: 0;
    ONE_SHOT     :: 1;
    FORMAT_16BIT :: 0;
    FORMAT_8BIT  :: 2;
    ENABLE       :: 32768;
}

/// Duty cycles for a PSG channel.
CSND_DutyCycle :: enum u8 {
    _0  :: 7;
    _12 :: 0;
    _25 :: 1;
    _37 :: 2;
    _50 :: 3;
    _62 :: 4;
    _75 :: 5;
    _87 :: 6;
}

/// Channel info.
CSND_ChnInfo :: union {
    value: [3] u32; ///< Raw values.
    struct {
        active:      u8; ///< Channel active.
        _pad1:       u8; ///< Padding.
        _pad2:       u16; ///< Padding.
        adpcmSample: s16; ///< Current ADPCM sample.
        adpcmIndex:  u8; ///< Current ADPCM index.
        _pad3:       u8; ///< Padding.
        unknownZero: u32; ///< Unknown.
    }
}

/// Capture info.
CSND_CapInfo :: union {
    value: [2] u32; ///< Raw values.
    struct {
        active:      u8; ///< Capture active.
        _pad1:       u8; ///< Padding.
        _pad2:       u16; ///< Padding.
        unknownZero: u32; ///< Unknown.
    }
}

