C3D_IVec :: u32;

/**
* @struct C3D_FVec
* @brief Float vector
*
* Matches PICA layout
*/
C3D_FVec :: union {
    /**
    * @brief Vector access
    */
    struct {
        w: float; ///< W-component
        z: float; ///< Z-component
        y: float; ///< Y-component
        x: float; ///< X-component
    }
    /**
    * @brief Quaternion access
    */
    struct {
        r: float; ///< Real component
        k: float; ///< K-component
        j: float; ///< J-component
        i: float; ///< I-component
    }
    /**
    * @brief Raw access
    */
    c: [4] float;
}

/**
* @struct C3D_FQuat
* @brief Float quaternion. See @ref C3D_FVec.
*/
C3D_FQuat :: C3D_FVec;

/**
* @struct C3D_Mtx
* @brief Row-major 4x4 matrix
*/
C3D_Mtx :: union {
    r: [4] C3D_FVec; ///< Rows are vectors
    m: [16] float; ///< Raw access
}

/**
*@brief Transposes the matrix. Row => Column, and vice versa.
